* {
    font-family: "JetBrains Mono", sans-serif;
    font-size: 14px;
}

window#waybar {
    background: rgba(0,0,0,0);
  padding:4px;
}
#clock, #custom-date, #network, #backlight, #pulseaudio, #battery {
  padding:8px;
  padding-left: 40px; /* Space for icon */
  padding-right: 8px; /* Space for icon */
  background-repeat: no-repeat;
  background-position: 3px center;
  background-size: 30px; 
  margin:4px;
  background-color:#181926;
  border-radius:4px;
}

#workspaces{
  background-color:#181926;
  border-radius:4px;
  margin:4px;
  padding:1px;
  border-radius:4px;
}

#workspaces button{
    margin-top:2px;
    margin-bottom:2px;
    margin-left:2px;
    margin-right:2px;
  padding:0;
  padding-left:8px;
  padding-right:8px;
  border-radius:2px;
}

#workspaces button.active{
  background-color:#B7BDF8;
  color:#181926;
}



#clock{
    background-image: url("/home/abhi/.config/waybar/icons/watch.svg");
}

#custom-date{
    background-image: url("/home/abhi/.config/waybar/icons/calendar.svg");
}
/* Individual icons */
#network {
    background-image: url("/home/abhi/.config/waybar/icons/sun.svg");
}

#backlight {
    background-image: url("/home/abhi/.config/waybar/icons/sun.svg");

}


#pulseaudio {
background-image: url("/home/abhi/.config/waybar/icons/volume.svg");

}


#battery {
    background-image: url("/home/abhi/.config/waybar/icons/battery.svg");

}

#custom-power {
  background-image: url("/home/abhi/.config/waybar/icons/grid.svg");
  background-repeat: no-repeat;
  background-position: 3px center;
  background-size: 30px; 
  margin: 4px;
  background-color: #181926;
  border-radius: 4px;
 /* NOTE: This is how i am assigning this item's width  */
  padding:0px 14px
}

#tray{
  margin: 4px;
  background-color: #181926;
  border-radius: 4px;
  padding-left:8px;
  padding-right:8px;
}

#tray item {
    padding: 0 6px; /* Adds horizontal space */
}
